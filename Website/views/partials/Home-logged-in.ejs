        <div class="login_btn d-none d-lg-block">
            <a class="popup-with-form" href="#entry-form"><i class="icon-plus"></i> New Entry</a>
        </div>
    </div>

    <!-- Entry list area-->
    <div class="col-sm-8 entries-box">
        <%- include('../partials/entries/entry-list.ejs') %> 
    </div>

    <!-- Spacer -->
