</div>

<!-- Help Box-->
<form id="help-box" class="white-popup-block mfp-hide modal-form">
    <div class="popup_box ">
        <div class="popup_inner">
            <%- include('../partials/entries/help-box.ejs') %>
        </div>
    </div>
</form>

<!-- New Entry Form -->
<form id="entry-form" class="white-popup-block mfp-hide modal-form">
    <div class="popup_box ">
        <div class="popup_inner">
            <%- include('../partials/entries/new-entry-form.ejs') %>
        </div>
    </div>
</form>

