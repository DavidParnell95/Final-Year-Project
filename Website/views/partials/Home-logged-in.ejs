    <div class="col-sm-10">
        <h2 class="title-headings welcome-user">Welcome </h2>
    </div>
    
    <div class="col-sm-2">
        <a href="#help-box" class="hollow_button popup-with-form"><i class="icon-info"></i></a>
    </div>

</div>

